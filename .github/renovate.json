{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":prHourlyLimit2",
    "group:monorepos",
    "workarounds:all"
  ],
  "osvVulnerabilityAlerts": true,
  "dependencyDashboard": true,
  "enabledManagers": [
    "gradle",
    "gradle-wrapper",
    "asdf",
    "github-actions"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "automerge": false
    }
  ],
  "labels": [
    "dependencies"
  ],
  "gradle": {
    "managerFilePatterns": [
      "/(^|/)gradle/.+.toml$/",
      "/.versions.toml$/"
    ]
  }
}
